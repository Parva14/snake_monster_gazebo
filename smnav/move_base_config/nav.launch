<launch>

  <arg name="no_static_map" default="true"/>

  <arg name="base_global_planner" default="navfn/NavfnROS"/>
  <!-- <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS"/> -->
  <!-- <arg name="base_local_planner" default="base_local_planner/TrajectoryPlannerROS"/> -->
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">   
      <param name="map_update_interval" value="0.1"/>
  </node>   

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <param name="controller_frequency" value="20.0" />
    <param name="planner_frequency" value="4.0" />
    <param name="max_planning_retries" value="4.0" />

    <!-- <param name="base_global_planner" value="$(arg base_global_planner)"/>
    <param name="base_local_planner" value="$(arg base_local_planner)"/>  --> 
    <rosparam file="../move_base_config/base_local_planner_params.yaml" command="load"/>

    <!-- observation sources located in costmap_common.yaml -->
    <rosparam file="../move_base_config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="../move_base_config/costmap_common_params.yaml" command="load" ns="local_costmap" />

  <!--   <rosparam file="../move_base_config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="../move_base_config/costmap_common_params.yaml" command="load" ns="local_costmap" /> -->
    <rosparam file="../move_base_config/local_costmap_params.yaml" command="load" />
    <rosparam file="../move_base_config/global_costmap_params.yaml" command="load" />
    <!-- <rosparam file="../move_base_config/base_local_planner_params.yaml" command="load" /> -->

    <!-- local costmap, needs size -->
   <!--  <rosparam file="../move_base_config/costmap_local.yaml" command="load" ns="local_costmap" />
    <param name="local_costmap/width" value="10.0"/>
    <param name="local_costmap/height" value="10.0"/> -->

    <!-- static global costmap, static map provides size -->
    <!-- <rosparam file="../move_base_config/costmap_global_static.yaml" command="load" ns="global_costmap" unless="$(arg no_static_map)"/> -->
    
    <!-- global costmap with laser, for odom_navigation_demo -->
 <!--    <rosparam file="../move_base_config/costmap_global_laser.yaml" command="load" ns="global_costmap" if="$(arg no_static_map)"/>
    <param name="global_costmap/width" value="100.0" if="$(arg no_static_map)"/>
    <param name="global_costmap/height" value="100.0" if="$(arg no_static_map)"/> -->
  </node>


<!-- 
  Example amcl configuration. Descriptions of parameters, as well as a full list of all amcl parameters, can be found at http://www.ros.org/wiki/amcl.
-->
  <node pkg="amcl" type="amcl" name="amcl" respawn="true">
    <param name="odom_model_type" value="diff"/>
  </node>
 

</launch>